@model UserLoginForm

@{
    Layout = "_Layout_CenterScreen";
    ViewData["Title"] = "Sign In";
}
<section id="login">
    <div class="center-screen">
        <div class="surface">
            <div class="cetner-content">
                <h1 class="mb-4 text-center">@ViewData["Title"]</h1>
                <form asp-controller="Auth" asp-action="Login" method="post" novalidate enctype="multipart/form-data">
                    <div class="form-group mb-4">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email address" />
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    </div>
                    <div class="form-group-check mb-3">
                        <input type="checkbox" class="form-check-input">
                        <label class="form-check-label">Remember Me</label>
                    </div>
                </form>
                <button type="submit" class="btn btn-blue btn-submit-login">Log In</button>
                <div class="center-content already-account">
                    <p>Don't have an account? <a asp-controller="Auth" asp-action="SignUp">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>
</section>
