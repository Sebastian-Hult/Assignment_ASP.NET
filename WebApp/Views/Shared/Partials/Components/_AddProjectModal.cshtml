@model AddProjectViewModel

<div id="addProjectModal" class="modal">
        <div class="modal-content">

            <div class="modal-header">
                <h3>Add Project</h3>
                <button type="button" class="btn-close" data-close="true"></button>
            </div>

            <form novalidate method="post" asp-action="AddProject" asp-controller="Admin">

                <div class="image-previewer square">
                    <img src="~/" class="image-preview" />
                    <input accept="image/*" class="d-none" />
                </div>

                <div class="form-group">
                <label asp-for="Form.ProjectName">Project Name</label>
                    <div class="field-group">
                    <input asp-for="Form.ProjectName" class="input-validation-error" type="text" placeholder="Project name" />
                    <span asp-validation-for="Form.ProjectName" class="field-validation-error">Required</span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Form.ClientName">Client</label>
                    <div class="field-group">
                        <select asp-for="Form.ClientId" name="client" id="client">
                            <option value="">-- Choose a Client --</option>
                            @foreach (var client in Model.Clients)
                            {
                                <option value="@client.Id" selected="@(client.Id == Model.Form.ClientId ? "selected" : null)">
                                    @client.ClientName
                                </option>
                            }

                        </select>
                        <span asp-validation-for="Form.ClientName" class="field-validation-error">Required</span>
                    </div>
                </div>
                <div class="form-group">
                <label asp-for="Form.Description">Description</label>
                    <div class="field-group">
                    <input asp-for="Form.Description" class="input-validation-error" type="text" placeholder="Type something" />
                    <span asp-validation-for="Form.Description" class="field-validation-error">Required</span>
                    </div>
                </div>
                <div class="form-group-date">
                    <div>
                    <label asp-for="Form.StartDate">Start Date</label>
                        <div class="field-group">
                        <input asp-for="Form.StartDate" class="" type="date" placeholder="Enter start date" />
                        <span asp-validation-for="Form.StartDate" class="">Required</span>
                        </div>
                    </div>
                    <div>
                    <label asp-for="Form.EndDate">End Date</label>
                        <div class="field-group">
                        <input asp-for="Form.EndDate" class="" type="date" placeholder="Enter end date" />
                        <span asp-validation-for="Form.EndDate" class="">Required</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                <label asp-for="Form.Budget">Budget</label>
                    <div class="field-group">
                    <input asp-for="Form.Budget" class="input-validation-error" type="text" placeholder="0" />
                    <span asp-validation-for="Form.Budget" class="field-validation-error">Required</span>
                    </div>
                </div>

                <button type="submit" class="btn btn-blue btn-submit">Create</button>

            </form>

        </div>
    </div>
