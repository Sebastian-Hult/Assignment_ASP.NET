<div id="addProjectModal" class="modal">
        <div class="modal-content">

            <div class="modal-header">
                <h3>Add Project</h3>
                <button type="button" class="btn-close" data-close="true"></button>
            </div>

            <form novalidate method="post" asp-action="AddProject" asp-controller="Admin">

                <div class="image-previewer square">
                    <img src="" class="image-preview" />
                    <input asp-for="" accept="image/*" class="d-none" />
                </div>

                <div class="form-group">
                    <label asp-for="">Project Name</label>
                    <div class="field-group">
                        <input asp-for="" class="input-validation-error" type="text" placeholder="Project name" />
                    <span asp-validation-for="" class="field-validation-error">Required</span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="">Client Name</label>
                    <div class="field-group">
                        <input asp-for="" class="input-validation-error" type="text" placeholder="Client name" />
                    <span asp-validation-for="" class="field-validation-error">Required</span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="">Description</label>
                    <div class="field-group">
                        <input asp-for="" class="input-validation-error" type="text" placeholder="Type something" />
                    <span asp-validation-for="" class="field-validation-error">Required</span>
                    </div>
                </div>
                <div class="form-group-date">
                    <div>
                        <label asp-for="">Start Date</label>
                        <div class="field-group">
                        <input asp-for="" class="" type="date" placeholder="Enter start date" />
                        <span asp-validation-for="" class="">Required</span>
                        </div>
                    </div>
                    <div>
                        <label asp-for="">End Date</label>
                        <div class="field-group">
                            <input asp-for="" class="" type="date" placeholder="Enter end date" />
                        <span asp-validation-for="" class="">Required</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="">Budget</label>
                    <div class="field-group">
                        <input asp-for="" class="input-validation-error" type="text" placeholder="0" />
                        <span asp-validation-for="" class="field-validation-error">Required</span>
                    </div>
                </div>

                <button class="btn btn-blue btn-submit">Create</button>

            </form>

        </div>
    </div>
